[Unit]
Description=Timmy Daemon
StartLimitIntervalSec=30
StartLimitBurst=2

[Service]
PIDFile=/var/run/timmy.pid
WorkingDirectory=/var/www/{{ http_host}}/timmy
ExecStart=/usr/bin/php /var/www/{{ http_host }}/timmy/daemon.php > /dev/null 2>/dev/null
User=www-data
Group=www-data
Type=simple
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
